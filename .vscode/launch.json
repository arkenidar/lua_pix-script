{
    "version": "0.2.0",
    "configurations": [ // tomblind.local-lua-debugger-vscode
        {
            "name": "embedlua app.lua",
            "request": "launch",
            "type": "lua-local",
            "program": {
                "command": "${workspaceFolder}/program-bin/embedlua"
            },
            "args": [
                "lua-scripts/app.lua"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "luajit app.lua",
            "request": "launch",
            "type": "lua-local",
            "program": {
                "lua": "luajit",
                "file": "lua-scripts/app.lua"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "love .",
            "request": "launch",
            "type": "lua-local",
            "program": {
                "command": "love"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        }
    ]
}